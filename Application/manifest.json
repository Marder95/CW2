{ 
    "manifest_version": 2,
    
    "name": "",
    "description": "Нарахування заборгованості за комунальні послуги",
    "version": "1.0",

    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "options.html",
        "default_icon": "images/logo.png"
    },
    
    "icons": {
        "128": "images/logo.png"
    },
    
    "options_page": "options.html",
    
    "background": {
		"scripts": ["background.js"]
	},

    "content_scripts": [
    {
        "matches": [
        "http://*/*",
        "https://*/*"
        ],
        "js": ["popup.js"]
    }
    ]
}